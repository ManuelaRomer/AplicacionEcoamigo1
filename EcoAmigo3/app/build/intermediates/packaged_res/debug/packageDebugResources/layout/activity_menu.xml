<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4FDE7"
    tools:context=".Menu">

    <TextView
        android:id="@+id/tMenu"
        android:layout_width="413dp"
        android:layout_height="82dp"
        android:background="#00CC8B"
        android:fontFamily="sans-serif-black"
        android:padding="12dp"
        android:text="MenÃº"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStarOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/Fondo1"
        android:layout_width="385dp"
        android:layout_height="596dp"
        android:background="#00CC8B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStarOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tMenu" />

    <Button
        android:id="@+id/btnInicio"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#C4FDE7"
        android:padding="10dp"
        android:text="INICIO"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Fondo1"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/Fondo1"
        app:layout_constraintTop_toTopOf="@+id/Fondo1" />

    <Button
        android:id="@+id/btnHorario"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#C4FDE7"
        android:padding="10dp"
        android:text="HORARIO"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Fondo1"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/Fondo1"
        app:layout_constraintTop_toBottomOf="@+id/btnInicio" />

    <Button
        android:id="@+id/btnTips"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#C4FDE7"
        android:padding="10dp"
        android:text="TIPS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Fondo1"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/Fondo1"
        app:layout_constraintTop_toBottomOf="@+id/btnHorario" />

    <Button
        android:id="@+id/btnReciclaje"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#C4FDE7"
        android:padding="10dp"
        android:text="RECICLAJE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Fondo1"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/Fondo1"
        app:layout_constraintTop_toBottomOf="@+id/btnTips" />

    <Button
        android:id="@+id/btnMetas"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#C4FDE7"
        android:padding="10dp"
        android:text="MIS METAS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Fondo1"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/Fondo1"
        app:layout_constraintTop_toBottomOf="@+id/btnReciclaje" />

    <Button
        android:id="@+id/btnPerfil"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#C4FDE7"
        android:padding="10dp"
        android:text="PERFIL"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Fondo1"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/Fondo1"
        app:layout_constraintTop_toBottomOf="@+id/btnMetas" />

    <Button
        android:id="@+id/btnComunidad"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:backgroundTint="#C4FDE7"
        android:padding="10dp"
        android:text="COMUNIDAD"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Fondo1"
        app:layout_constraintEnd_toEndOf="@+id/Fondo1"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/Fondo1"
        app:layout_constraintTop_toBottomOf="@+id/btnPerfil"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>