<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4FDE7"
    tools:context=".Registro">

    <TextView
        android:id="@+id/LogoEcoamigo"
        android:layout_width="413dp"
        android:layout_height="82dp"
        android:background="#00CC8B"
        android:fontFamily="sans-serif-black"
        android:padding="12dp"
        android:text="Ecoamigo Sevilla"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStarOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/Fondo"
        android:layout_width="362dp"
        android:layout_height="596dp"
        android:layout_marginBottom="28dp"
        android:background="#00CC8B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStarOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/registroNombre"
        android:layout_width="314dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#000000"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text="Nombre"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Fondo"
        app:layout_constraintStart_toStarOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Fondo"
        app:layout_constraintTop_toTopOf="@+id/Fondo" />

    <EditText
        android:id="@+id/registroApellido"
        android:layout_width="314dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#000000"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text="Apellido"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Fondo"
        app:layout_constraintStart_toStarOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Fondo"
        app:layout_constraintTop_toBottomOf="@+id/registroNombre" />

    <EditText
        android:id="@+id/registroCorreo"
        android:layout_width="314dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#000000"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text="Correo Electrónico"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Fondo"
        app:layout_constraintStart_toStarOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Fondo"
        app:layout_constraintTop_toBottomOf="@+id/registroApellido" />

    <EditText
        android:id="@+id/registroContraseña"
        android:layout_width="314dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#000000"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text="Contraseña"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/registroConfContraseña"
        app:layout_constraintEnd_toEndOf="@+id/Fondo"
        app:layout_constraintStart_toStarOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Fondo"
        app:layout_constraintTop_toBottomOf="@+id/registroCorreo"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/registroConfContraseña"
        android:layout_width="314dp"
        android:layout_height="61dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#000000"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:text="Confirmación de Contraseña"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btONnregistro"
        app:layout_constraintEnd_toEndOf="@+id/Fondo"
        app:layout_constraintStart_toStarOf="parent"
        app:layout_constraintStart_toStartOf="@+id/Fondo" />

    <Button
        android:id="@+id/btONnregistro"
        android:layout_width="235dp"
        android:layout_height="55dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="#025C3F"
        android:fontFamily="sans-serif-black"
        android:padding="10dp"
        android:text="Registrarme"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Fondo"
        app:layout_constraintEnd_toEndOf="@+id/Fondo"
        app:layout_constraintStart_toStartOf="@+id/Fondo" />

</androidx.constraintlayout.widget.ConstraintLayout>